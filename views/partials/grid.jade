#content-header
  h1 Grid
#breadcrumb
  a(href='/', class="tip-bottom")
    i.icon-home
    | Home
  a.current Grid
.container-fluid
  .row-fluid
    .alert.alert-info This is the grid view. It will soon show live prices for all markets. For now, you can use it to get to charts for some of the more obscure markets.
    .widget-box
      .widget-title
        span.icon: i.icon-signal
        h5 Grid
      .widget-content.nopadding
        table#market-grid.table.table-bordered.table-striped.table-fin
          thead
            tr
              th Symbol
              th XRP
              th(ng-repeat="currency in currencies") {{currency.cur}} {{issuers[currency.gat].name}}
          tbody
            tr
              th XRP
              td -
              td(ng-repeat="c2 in currencies"): a(href="market/{{c2.cur}}:{{issuers[c2.gat].name}}/XRP", ng-bind="tickers[c2.cur + '/' + c2.iss].last | rpcurr:tickers[c2.cur + '/' + c2.iss].first | rpamount:{rel_precision: 0, min_rel_precision: 0}")
            tr(ng-repeat="c1 in currencies")
              th {{c1.cur}}<br>{{issuers[c1.gat].name}}
              td: a(href="market/XRP/{{c1.cur}}:{{issuers[c1.gat].name}}") {{1/tickers[c1.cur + '/' + c1.iss].last}}
              td(ng-repeat="c2 in currencies")
                a(ng-hide="c1 == c2", href="market/{{c2.cur}}:{{issuers[c2.gat].name}}/{{c1.cur}}:{{issuers[c1.gat].name}}") 
                  span(ng-bind="crosstickers[c2.cur + ':' + c2.iss][c1.cur + ':' + c1.iss].last | rpcurr:c2.cur + '/' + c2.iss | rpamount:{rel_precision: 0, min_rel_precision: 0}")
                  br
                  span(ng-bind="crosstickers[c1.cur + ':' + c1.iss][c2.cur + ':' + c2.iss].last | rpcurr:c1.cur + '/' + c1.iss | rpamount:{rel_precision: 0, min_rel_precision: 0}")
                span(ng-show="c1 == c2") -